---
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import FloatingCTA from '../components/ui/FloatingCTA.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const {
  title = '太极文化 - 身心和谐之道',
  description = '探索太极哲学、武术和健康养生的传统智慧'
} = Astro.props;
---

<!doctype html>
<html lang="zh-CN" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Google Fonts - Noto Serif TC & Noto Sans TC -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@300;400;500;700&family=Noto+Serif+TC:wght@400;700;900&display=swap" rel="stylesheet" />

    <title>{title}</title>

    <!-- View Transitions for SPA-like navigation -->
    <ViewTransitions />
  </head>

  <body
    class="bg-paper text-primary transition-colors duration-500"
  >
    <Header />
    <main class="min-h-screen">
      <slot />
    </main>
    <Footer />
    <FloatingCTA />
  </body>
</html>

<style is:global>
  /* 全局字体设置 */
  body {
    font-family: 'Noto Sans TC', sans-serif;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Noto Serif TC', serif;
  }
</style>
