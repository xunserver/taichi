---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import taichiLogo from '../../../assets/image/taichi-logo.png';
import poseImage from '../../../assets/image/tai-chi-pose.jpg';
import silhouetteImage from '../../../assets/image/tai-chi-silhouette.jpg';
import standingImage from '../../../assets/image/tai-chi-standing.jpg';
import kungFuImage from '../../../assets/image/tai-chi-kung-fu.jpg';
import { localizedPath } from '../../../lib/paths';

const currentLocale = 'en';
