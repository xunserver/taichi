---
import { Image } from 'astro:assets';
import taichiLogo from '../../assets/image/taichi-logo.png';

const navigation = [
  { name: '首页', href: '/' },
  { name: '关于太极', href: '/about' },
  { name: '招式展示', href: '/movements' },
  { name: '课程', href: '/courses' },
  { name: '学员风采', href: '/blog' },
];
---

<header class="fixed top-0 left-0 right-0 z-40 transition-all duration-300">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-3 group">
        <Image
          src={taichiLogo}
          alt="太极文化"
          width={40}
          height={40}
          class="h-10 w-10 object-contain group-hover:rotate-180 transition-transform duration-700"
          format="png"
        />
        <span
          class="text-xl font-serif font-bold text-ink group-hover:text-accent transition-colors"
        >
          太极文化
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        {navigation.map((item) => (
          <a
            href={item.href}
            class="text-ink hover:text-accent transition-colors duration-200 font-medium relative group"
          >
            {item.name}
            <span
              class="absolute -bottom-1 left-0 w-0 h-0.5 bg-accent transition-all duration-300 group-hover:w-full"
            ></span>
          </a>
        ))}
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          class="text-ink hover:text-accent transition-colors p-2"
          aria-label="打开菜单"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation Menu -->
    <div
      id="mobile-menu"
      class="hidden md:hidden"
    >
      <div class="bg-paper/95 backdrop-blur-md border-t border-border/30 py-4 px-4 shadow-xl">
        <div class="flex flex-col space-y-2">
          {navigation.map((item) => (
            <a
              href={item.href}
              class="text-ink hover:text-accent hover:bg-mist/50 transition-all duration-200 px-4 py-3 rounded-lg font-medium"
            >
              {item.name}
            </a>
          ))}
        </div>
      </div>
    </div>
  </nav>
</header>

<style>
  /* 滚动时添加背景模糊 */
  header {
    backdrop-filter: blur(0px);
    background-color: transparent;
  }

  header.scrolled {
    backdrop-filter: blur(10px);
    background-color: rgba(245, 242, 237, 0.95);
  }

  /* 移动端菜单动画 */
  #mobile-menu {
    animation: slideDown 0.3s ease-out;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  // 监听滚动事件,添加背景模糊效果
  const header = document.querySelector('header');

  const handleScroll = () => {
    if (window.scrollY > 10) {
      header?.classList.add('scrolled');
    } else {
      header?.classList.remove('scrolled');
    }
  };

  window.addEventListener('scroll', handleScroll, { passive: true });

  // 移动端菜单切换
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // 点击菜单项后关闭菜单
  const mobileMenuLinks = mobileMenu?.querySelectorAll('a');
  mobileMenuLinks?.forEach((link) => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>
