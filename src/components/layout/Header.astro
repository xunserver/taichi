---
import { Image } from 'astro:assets';
import taichiLogo from '../../assets/image/taichi-logo.png';
import LanguageSwitcher from '../ui/LanguageSwitcher.vue';
import { translations } from '../../lib/i18n';
import { localizedPath } from '../../lib/paths';

const currentLocale = (Astro.currentLocale || 'nl') as 'nl' | 'en' | 'zh';
const t = translations[currentLocale];

// 网站名称翻译
const siteNames = {
  nl: 'Tai Chi Cultuur',
  en: 'Tai Chi Culture',
  zh: '太极文化',
};

const navigation = [
  { name: t.nav.home, href: localizedPath('/', currentLocale) },
  { name: t.nav.about, href: localizedPath('/about', currentLocale) },
  { name: t.nav.movements, href: localizedPath('/movements', currentLocale) },
  { name: t.nav.courses, href: localizedPath('/courses', currentLocale) },
  { name: t.nav.blog, href: localizedPath('/blog', currentLocale) },
];

// 按钮标签翻译
const buttonLabels = {
  nl: { menu: 'Open menu', logo: 'Tai Chi Cultuur' },
  en: { menu: 'Open menu', logo: 'Tai Chi Culture' },
  zh: { menu: '打开菜单', logo: '太极文化' },
};

const labels = buttonLabels[currentLocale];
---

<header class="fixed top-0 left-0 right-0 z-40 transition-all duration-300">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href={localizedPath('/', currentLocale)} class="flex items-center space-x-3 group">
        <Image
          src={taichiLogo}
          alt={labels.logo}
          width={40}
          height={40}
          class="h-10 w-10 object-contain group-hover:rotate-180 transition-transform duration-700"
          format="png"
        />
        <span
          class="text-xl font-serif font-bold text-ink group-hover:text-accent transition-colors"
        >
          {siteNames[currentLocale]}
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        {navigation.map((item) => (
          <a
            href={item.href}
            class="text-ink hover:text-accent transition-colors duration-200 font-medium relative group"
          >
            {item.name}
            <span
              class="absolute -bottom-1 left-0 w-0 h-0.5 bg-accent transition-all duration-300 group-hover:w-full"
            ></span>
          </a>
        ))}

        <!-- Language Switcher -->
        <div class="border-l border-border pl-8" id="desktop-language-switcher">
          <LanguageSwitcher client:load />
        </div>
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          class="text-ink hover:text-accent transition-colors p-2"
          aria-label={labels.menu}
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation Menu -->
    <div
      id="mobile-menu"
      class="hidden md:hidden"
    >
      <div class="bg-paper/95 backdrop-blur-md border-t border-border/30 py-4 px-4 shadow-xl">
        <div class="flex flex-col space-y-2">
          {navigation.map((item) => (
            <a
              href={item.href}
              class="text-ink hover:text-accent hover:bg-mist/50 transition-all duration-200 px-4 py-3 rounded-lg font-medium"
            >
              {item.name}
            </a>
          ))}

          <!-- Mobile Language Switcher -->
          <div class="border-t border-border/30 pt-4 mt-2" id="mobile-language-switcher">
            <LanguageSwitcher client:load />
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>

<style>
  /* 滚动时添加背景模糊 */
  header {
    backdrop-filter: blur(0px);
    background-color: transparent;
  }

  header.scrolled {
    backdrop-filter: blur(10px);
    background-color: rgba(245, 242, 237, 0.95);
  }

  /* 移动端菜单动画 */
  #mobile-menu {
    animation: slideDown 0.3s ease-out;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script define:vars={{ currentLocale: Astro.currentLocale || 'nl' }}>
  // 移动端菜单切换 - 使用事件委托确保在View Transitions后仍然工作
  document.addEventListener('click', (e) => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    // 检查点击的是否是菜单按钮
    if (mobileMenuButton && (e.target === mobileMenuButton || mobileMenuButton.contains(e.target))) {
      mobileMenu?.classList.toggle('hidden');
      e.preventDefault();
      e.stopPropagation();
    }

    // 点击菜单项后关闭菜单
    if (mobileMenu && !mobileMenu.classList.contains('hidden')) {
      const mobileMenuLinks = mobileMenu.querySelectorAll('a');
      mobileMenuLinks.forEach((link) => {
        if (e.target === link || link.contains(e.target)) {
          mobileMenu.classList.add('hidden');
        }
      });
    }
  });

  // 滚动效果处理
  let scrollHandler = () => {
    const header = document.querySelector('header');
    if (window.scrollY > 10) {
      header?.classList.add('scrolled');
    } else {
      header?.classList.remove('scrolled');
    }
  };

  window.addEventListener('scroll', scrollHandler, { passive: true });
  scrollHandler();

  // 语言切换器可见性
  function updateLanguageSwitcherVisibility() {
    const desktopSwitcher = document.getElementById('desktop-language-switcher');
    const mobileSwitcher = document.getElementById('mobile-language-switcher');
    const isMobile = window.innerWidth < 768;

    if (isMobile) {
      desktopSwitcher?.classList.add('hidden');
      mobileSwitcher?.classList.remove('hidden');
    } else {
      desktopSwitcher?.classList.remove('hidden');
      mobileSwitcher?.classList.add('hidden');
    }
  }

  updateLanguageSwitcherVisibility();
  window.addEventListener('resize', updateLanguageSwitcherVisibility);
</script>
